{
  "name": "j5pharmacy-backend",
  "version": "0.2.5",
  "description": "Backend for J5 Pharmacy Management System",
  "author": "Zen Garden",
  "main": "./electron/main.js",
  "bin": {
    "j5pms": "./electron/cli.js"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron ./electron/main.js",
    "cli": "node ./electron/cli.js",
    "build": "electron-builder build --win --config.win.signAndEditExecutable=false",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.j5pharmacy.pms",
    "productName": "J5 Pharmacy Management System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "server.js",
      "socket.js",
      "app.js",
      ".env",
      "package.json",
      "controller/**/*",
      "routes/**/*",
      "schema/**/*",
      "utils/**/*",
      "middleware/**/*",
      "validators/**/*",
      "config/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "electron/icons/icon.ico",
      "artifactName": "${productName}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "J5 Pharmacy PMS"
    },
    "asar": false
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.1",
    "nodemailer": "^6.9.16",
    "socket.io": "^4.8.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.3"
  }
}
